{
  "name": "laverna",
  "version": "0.7.4-RC1",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Laverna/laverna"
  },
  "scripts": {
    "start": "node ./server.js",
    "setup": "npm install && gulp build",
    "electron": "NODE_ENV=dev electron .",
    "test": "gulp test:run",
    "cover": "rm -rf _dev/cover && npm run cover:generate",
    "cover:generate": "nyc --reporter=lcov --require babel-register gulp tape && nyc report",
    "cover:check": "npm run cover && nyc check-coverage --lines 95 --functions 95 --branches 95",
    "jsdoc": "jsdoc app/scripts -r -d _dev/jsdoc && gulp serve --root=./_dev/jsdoc --dev",
    "gulpdoc": "jsdoc gulps/ gulpfile.js -r -d _dev/gulpdoc && gulp serve --root=./_dev/gulpdoc --dev",
    "eslint": "eslint ./app/scripts/",
    "prepub": "npm test && npm run cover && npm run cover:check"
  },
  "main": "electron.js",
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "nyc": {
    "report-dir": "_dev/cover",
    "include": [
      "app/scripts/**/*.js"
    ]
  },
  "dependencies": {
    "backbone": "^1.3.3",
    "backbone.marionette": "^3.0.0",
    "backbone.radio": "^2.0.0",
    "bootstrap": "^3.3.7",
    "debug": "^2.2.0",
    "device-detect.js": "^0.2.7",
    "es6-promise": "^3.2.1",
    "fastclick": "^1.0.6",
    "hammerjs": "^2.0.8",
    "jquery": "^3.1.0",
    "jquery-hammerjs": "^2.0.0",
    "modernizr": "^3.3.1",
    "modernizr-loader": "0.0.5",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-core": "^6.13.2",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.13.2",
    "browser-sync": "^2.14.0",
    "cordova-lib": "^6.3.0",
    "del": "^2.2.1",
    "dev-ip": "^1.0.1",
    "eslint": "^3.3.1",
    "faucet": "0.0.1",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^3.1.0",
    "gulp-clean-css": "^2.0.12",
    "gulp-concat": "^2.6.0",
    "gulp-electron": "0.1.3",
    "gulp-htmlmin": "^2.0.0",
    "gulp-jsonlint": "^1.1.2",
    "gulp-less": "^3.1.0",
    "gulp-load-plugins": "^1.2.4",
    "gulp-manifest": "^0.1.1",
    "gulp-nightwatch": "^0.3.0",
    "gulp-rename": "^1.2.2",
    "gulp-replace": "^0.5.4",
    "gulp-sequence": "^0.4.5",
    "gulp-shell": "^0.5.2",
    "gulp-util": "^3.0.7",
    "jsdoc": "^3.4.0",
    "jsdom": "^9.4.2",
    "merge-stream": "^1.0.0",
    "nightwatch": "^0.9.6",
    "nyc": "^8.1.0",
    "proxyquire": "^1.7.10",
    "raw-loader": "^0.5.1",
    "sinon": "^1.17.5",
    "tape": "^4.6.0",
    "webpack": "^1.13.2",
    "webpack-stream": "^3.2.0"
  },
  "engines": {
    "node": ">=0.8.0"
  },
  "optionalDependencies": {},
  "resolutions": {
    "underscore": "~1.7.0"
  }
}
